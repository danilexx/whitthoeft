{
  "compilerOptions": {
    "lib": [ 
      "es5", "es6", "es7",
              "es2015", "es2016",
              "es2017", "es2018",
              "esnext" ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "src/*": ["./src/*"],
      "app/*": ["./src/app/*"],
      "models/*": ["./src/models/*"],
    },
  },
  "include": ["src"],
  "exclude": ["./dist", "node_modules"]
}